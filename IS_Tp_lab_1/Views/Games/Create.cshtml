@model IS_Tp_lab_1.Game

@{
    ViewData["Title"] = "Create";
}
@if (ViewBag.PlatformId != null)
{
    <h1>Додавання нової гри для платформи @ViewBag.PlatformName</h1>
}
else
{
<h1>Додавання нової гри cтудії @ViewBag.StudioName</h1>
}
<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            @if (ViewBag.CheckIndex != null)
            {
                <input type="hidden" value="@ViewBag.PlatformId" name="PlatformId" />
                <div class="form-group">
                    <label asp-for="GameStudioId" class="control-label"></label>
                    <select asp-for="GameStudioId" class="form-control" asp-items="ViewBag.GameStudioId"></select>
                </div>
            }
            else
            {
                <input type="hidden" value="@ViewBag.StudioId" name="GameStudioId" />
                <div class="form-group">
                    <label asp-for="PlatformId" class="control-label"></label>
                    <select asp-for="PlatformId" class="form-control" asp-items="ViewBag.PlatformId"></select>
                </div>
            }
            
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn bg-dark btn-sm" role="button">назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
