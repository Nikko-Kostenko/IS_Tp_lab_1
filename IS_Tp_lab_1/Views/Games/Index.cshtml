@using Microsoft.AspNetCore.Identity
@model IEnumerable<IS_Tp_lab_1.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Ігри для @ViewBag.PlatformName</h1>

<p>
    @Html.ActionLink("додати нову гру", "Create", new {PlatformID = @ViewBag.PlatformId}, new { @class = "btn btn-primary btn-block" })
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameStudio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameStudio.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm" role="button">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" role="button">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-sm" role="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
